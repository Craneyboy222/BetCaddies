# Database
DATABASE_URL="postgresql://username:password@localhost:5432/bet_caddies"

# The Odds API
ODDS_API_KEY=your_odds_api_key_here

# Odds API defaults (optional)
ODDS_API_REGIONS=uk
ODDS_API_MARKETS=outrights
ODDS_API_ODDS_FORMAT=decimal
ODDS_API_DATE_FORMAT=iso

# Application
LOG_LEVEL=info
USER_AGENT="BetCaddies/1.0 (https://github.com/Craneyboy222/BetCaddies)"
CORS_ORIGIN="http://localhost:5173"
ODDS_PROVIDER="oddschecker"

# Auth
JWT_SECRET="replace_with_strong_secret"
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="replace_with_strong_password"

# Database behavior
ALLOW_DB_MOCK="false"

# Live Tracking
LIVE_TRACKING_CACHE_TTL_MS=60000
LIVE_TRACKING_MAX_CONCURRENCY=3

# Local-only test page (do not enable in production)
VITE_ENABLE_LIVE_TRACKING_TEST_PAGE=false

# Stripe (can also be configured from admin dashboard)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_SUCCESS_URL=
STRIPE_CANCEL_URL=

# PayPal (can also be configured from admin dashboard)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_WEBHOOK_ID=
PAYPAL_MODE=sandbox

# Cloudflare R2 (media uploads)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_PUBLIC_BASE_URL=